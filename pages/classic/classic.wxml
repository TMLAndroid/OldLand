<view class="header">
  <view class="left">
    <text class="tag">No.</text>
    <text class="day">{{classics[index].index}}</text>
    <view class="split-line"></view>
    <view class="year-month">
      <text class="month">三月</text>
      <text class="year">2018</text>
    </view>
  </view>
  <view class="right">
    <image class="like-icon" src="/images/movie/like_check.png"></image>
    <text class="like-num-text">{{classics[index].fav_nums}}</text>
    <image class="share-icon" src='/images/movie/share.png'></image>
  </view> 
</view>
<view class="content">
  <cmp-movie img_path="{{classics[index].image}}"></cmp-movie>
  <text class="text">{{classics[index].content}}</text>
</view>
<view class="bottom-container">
  <view class="bottom">
    <image bindtap="onPre" class="pre-icon" src="/images/movie/pre.png"></image>
    <text class="movice-title">{{classics[index].title}}</text>
    <image bindtap="onNext" class="next-icon" src="/images/movie/next.png"></image>
  </view>
</view>