page{
  background:rgba(247,247,247,1);
  display: flex;
  flex-direction: column;
  
}
.content-icon{
  padding-top: 41rpx;
  width: 100%;
  height: 490rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:rgba(255,255,255,1);

}

.content-icon .icon{
  width:200rpx;
  height:300rpx;
}

.content-icon .title{
  padding-top: 29rpx;
  font-size:38rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(0,0,0,1);

}

.content-icon .author{
  padding-top: 17rpx;
  font-size:28rpx;
font-family:PingFang;
font-weight:400;
color:rgba(153,153,153,1);
}

.content-comment{
  margin-top: 20rpx;
  width: 100%;
  background:rgba(255,255,255,1);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.content-comment .title{
  padding-bottom: 10rpx;
  font-size:30rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.content-comment .comment-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.content-comment .comment-container .item{
  background:rgba(247,247,247,1);
  border-radius:26rpx;
  font-size:24rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-left:28rpx;
  padding-right: 28rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx; 
  margin-left: 25rpx;
  margin-top: 20rpx;
}
.content-comment .comment-container .item_0{
  background:rgba(255,250,221,1);
}

.content-comment .comment-container .item_1{
  background:rgba(238,250,255,1);
}

.content-intr{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-top: 20rpx;
  background: white;
}

.content-intr .title{
  padding-bottom: 30rpx;
  font-size:30rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(41,41,41,1);
}

.content-intr .content{
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size:28rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(102,102,102,1);
}

.content-detail{
  margin-top: 20rpx;
  background:rgba(255,255,255,1);
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.content-detail .title{
  font-size:30rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(0,0,0,1);
  text-align: center;
}

.content-detail .other{
  padding-left: 56rpx;
  font-size:24rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(102,102,102,1);
}