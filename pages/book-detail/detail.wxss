page{
  background:rgba(247,247,247,1);
  display: flex;
  flex-direction: column;
  
}
.content-icon{
  padding-top: 41rpx;
  width: 100%;
  height: 490rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:rgba(255,255,255,1);

}

.content-icon .icon{
  width:200rpx;
  height:300rpx;
}

.content-icon .title{
  padding-top: 29rpx;
  font-size:38rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(0,0,0,1);

}

.content-icon .author{
  padding-top: 17rpx;
  font-size:28rpx;
font-family:PingFang;
font-weight:400;
color:rgba(153,153,153,1);
}

.content-comment{
  margin-top: 20rpx;
  width: 100%;
  background:rgba(255,255,255,1);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.content-comment .title{
  padding-bottom: 10rpx;
  font-size:30rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.content-comment .comment-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.content-comment .comment-container .item{
  background:rgba(247,247,247,1);
  border-radius:26rpx;
  font-size:24rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-left:28rpx;
  padding-right: 28rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx; 
  margin-left: 25rpx;
  margin-top: 20rpx;
}
.content-comment .comment-container .item_0{
  background:rgba(255,250,221,1);
}

.content-comment .comment-container .item_1{
  background:rgba(238,250,255,1);
}

.content-intr{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-top: 20rpx;
  background: white;
}

.content-intr .title{
  padding-bottom: 30rpx;
  font-size:30rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(41,41,41,1);
}

.content-intr .content{
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size:28rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(102,102,102,1);
}

.content-detail{
  margin-top: 20rpx;
  background:rgba(255,255,255,1);
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
  padding-bottom: 100rpx;
  
}

.content-detail .title{
  font-size:30rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(0,0,0,1);
  text-align: center;
}

.content-detail .other{
  padding-left: 56rpx;
  font-size:24rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(102,102,102,1);
}

.bottom{
  bottom: 0rpx;
  width: 100%;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(238,238,238,1);
  box-shadow:0px -2px 16px 0px rgba(189,189,189,0.2);
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
}

.bottom .input-container{
  border:1px solid rgba(0,0,0,1);
  border-radius:28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width:405rpx;
  height:56rpx;
  margin-left: 29rpx;
  padding-left:20rpx;
}
.bottom .input-container .input-icon{
  width: 24rpx;
  height: 24rpx;
  padding-left: 18rpx;
  padding-right: 9rpx;
}
.bottom  .input-container .input{
  background:rgba(255,255,255,1);
  
  font-size:28rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.bottom .input-holder{
  font-size:24rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(1,1,1,1);
}

.bottom .right-container{
  position: absolute;
  right: 30rpx;

   display: flex;
   flex-direction: row;
   align-items: center;
}
.bottom .right-container .like-icon{
  width:32rpx;
  height:28rpx;
}

.bottom .right-container .like-num{
  font-size:18rpx;
  font-family:PingFang;
  font-weight:400;
  color:rgba(1,1,1,1);
  padding-right: 37rpx;
  position: relative;
  bottom: 19rpx;
  left: 2rpx;
}

.bottom .right-container .share-icon{
  width:28rpx;
  height:28rpx;
}

.bottom_up{
  bottom: 0rpx;
  width: 100%;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(238,238,238,1);
  box-shadow:0px -2px 16px 0px rgba(189,189,189,0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
}

.bottom_up .top{
  width:100%;
  height:80rpx;
  display: flex;
  flex-direction: row;

}

.bottom_up .top .cancel{
  position: absolute;
  left: 26rpx;
  font-size:34rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(153,153,153,1);
}

.bottom_up .top .confirm{
  position: absolute;
  right: 29rpx;
  font-size:34rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.bottom_up .comment-container{
   width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.bottom_up .comment-container .item{
  background:rgba(247,247,247,1);
  border-radius:2rpx;
   padding-left:28rpx;
